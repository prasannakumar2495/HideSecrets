<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.hidedata.hidesecrets"
    >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
                     tools:ignore="ScopedStorage"
        />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HideSecrets"
        tools:targetApi="31"
        >
        <activity
            android:name=".ui.SingleVideo"
            android:exported="false"
            />
        <activity
            android:name=".ui.SingleImage"
            android:exported="false"
            />
        <activity
            android:name=".ui.VideoActivity"
            android:exported="false"
            />
        <activity
            android:name=".ui.APKActivity"
            android:exported="false"
            />
        <activity
            android:name=".ui.DocumentsActivity"
            android:exported="false"
            />
        <activity
            android:name=".ui.PhotosActivity"
            android:exported="false"
            />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>